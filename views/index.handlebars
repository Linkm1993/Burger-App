

<div class="columns is-centered">
    <div class="column is-one-third ">
    <h1 class="has-text-centered is-size-1">Eat Da Burger!</h1>
    <figure class="image container">
      <img src="assets/img/burger.jpg" alt="Burger">
    </figure>
  </div>
</div>

<div class="columns is-4">
  <div class="column">
    <h2 class="is-size-2 has-text-centered">Uneaten!</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="column">
    <h2 class="is-size-2 has-text-centered">Add a Burger</h2>
    <form class="create-form">

    <div class="form-group has-text-centered">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="burger_name">
    </div>
    <div class="has-text-centered">
      <button type="submit" class="button is-primary ">Add Burger</button>
    </div>
   </form>

  </div>


  <div class="column">
    <h2 class="is-size-2 has-text-centered">Devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

